<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <ListView
                android:id="@+id/main_fav_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:divider="#00ff0000"
                android:dividerHeight="0dp"
                android:elevation="0dp"
                android:footerDividersEnabled="false"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tmpview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="헬로우~ 잇츠미"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:columnCount="2">

        <Button
            android:id="@+id/btn_myloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_rowWeight="1"
            android:onClick="MainButton"
            android:padding="5dp"
            android:text="내 주변 \npc방" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_rowWeight="1"
            android:onClick="MainButton"
            android:padding="5dp"
            android:text="지하철 근처 \npc방" />

        <Button
            android:id="@+id/btn_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_rowWeight="1"
            android:onClick="MainButton"
            android:padding="5dp"
            android:text="이벤트 \npc방" />

        <Button
            android:id="@+id/btn_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_rowWeight="1"
            android:onClick="MainButton"
            android:padding="5dp"
            android:text="즐겨찾기\npc방" />
    </GridLayout>
</LinearLayout>